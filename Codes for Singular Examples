#(Singular Code for Example 4.5)#
LIB "tropical.lib";
ring r=(0,t),(x,y),dp;
poly p1=t4+(−3t3 − 2t2)*xy+((29t3+112t2)/32)*x2y+t2*xy2+x2y2+(−3t−2)*x3y2+x4y2+((16+9t)/32)*x2y3+x3y3−(3/16)x2y4;
drawTropicalCurve(p1,"max","onlytexfile");
poly p2=substitute(p1,y,y+4);
drawTropicalCurve(p2,"max","onlytexfile");
---------------
#(Singular Code for Example 4.7)#
LIB "tropical.lib";
ring r=(0,t),(x,y),dp;
poly p1=(−14t12+9t10+4t8)/(1+t2)+((42t10+t8−30t6−8t4)/(1+t2))*xy+((−28t10−88t8+32t6+16t4)/(2+2t2)*x2y+((−14t8+9t6+4t4)/(1+t2))*xy2+(9t4+17t2+4)*x2y2+((42t6+t4−30t2−8)/(1+t2)*x3y2+((−14t4+9t2+4)/(1+t2))*x4y2+(−13t2−4)*x2y3+((−14t4+9t2+4)/(1+t2))*x3y3+x2y4;
drawTropicalCurve(p1,"max","onlytexfile");
poly p2=substitute(p1,y,y+2+3t+3t2);
