#(Singular Code for Example 3.2)#
LIB "tropical.lib";
ring r=(0,t),(x,y),dp;
poly h1=t50*x5y7+x5y3+(10 + 3t18)*x4y3+(25 + 6t18)*x3y3+(3 + 2t2)*x7;
drawTropicalCurve(h1,"max","onlytexfile");
poly h2=substitute(h1,x,x-5+3t9);
drawTropicalCurve(h2,"max","onlytexfile");
-----------
